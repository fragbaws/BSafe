<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alerts_layout_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/profile_round_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alerts_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="No previous alerts available"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alerts_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/profile_round_border"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:text="Latitude: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/alerts_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="left"
                android:text="54.213456"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:text="Longitude: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/alerts_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="left"
                android:text="23.1356785"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:text="Speed: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/alerts_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="left"
                android:text="120 km/h"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:gravity="left"
                android:text="G-Force: "
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/alerts_gforce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="left"
                android:text="4 G"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>